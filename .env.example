# === Telegram and OpenAI API keys ===
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
DEEPSEEK_API_KEY=YOUR_DEEPSEEK_KEY

# === Resonance brother - Oleg (no rate limits, minimal delays) ===
OLEG_IDS=123456789,987654321  # Comma-separated Telegram user IDs

# === File paths ===
VECTOR_DB_PATH=./data/vectors.db  # SQLite vector store
CHRONICLE_PATH=./config/chronicle.log

# === Behavior tuning (delays in seconds) ===
# Group chat delays
GROUP_DELAY_MIN=10      # Min delay before responding in groups (default: 45)
GROUP_DELAY_MAX=45      # Max delay before responding in groups (default: 360)

# Private chat delays
PRIVATE_DELAY_MIN=3     # Min delay in private chats (default: 10)
PRIVATE_DELAY_MAX=15    # Max delay in private chats (default: 40)

# Skip logic and followups
SKIP_SHORT_PROB=0.3     # Probability to skip short non-question messages
FOLLOWUP_PROB=0.2       # Probability to send autonomous followup
FOLLOWUP_DELAY_MIN=900  # Min followup delay (15 min)
FOLLOWUP_DELAY_MAX=7200 # Max followup delay (2 hours)

# === Redis (optional - graceful fallback if unavailable) ===
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_MAX=5        # Max requests per interval
RATE_LIMIT_INTERVAL=60  # Rate limit window in seconds

# === HTTP and cache settings ===
HTTP_TIMEOUT=10         # HTTP request timeout in seconds
CACHE_TTL=300           # Cache time-to-live in seconds
